!include "..\..\samples.mak"
!include "..\sspi.mak"

all: WebServer.exe

clean:
	del *.obj *.pdb *.exe 2>nul

csources: mkd
	@copy Makefile "$(dest)"
	@copy WebServer.c "$(dest)"
	@copy Default.Htm "$(dest)"
	@copy ReadMe.Txt "$(dest)"

mkd:
	-mkdir "$(dest)"

OBJS = \
	WebServer.obj

WebServer.exe: $(OBJS)
	$(link) $(sspildebug) $(sspilflags) -out:$*.exe $** $(sspilibs)
